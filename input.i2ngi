    "global": {
	"source": null,
	"dest": "tb-el7-prod.ps.dev.internet2.edu",
	"throughput": {
	    "tool": "iperf2",
	    "cores": 6
	}
    },

    "jobs": [

	{
	    "label": "L1",
	    "enabled": true,
	    "iterations": 1,
	    "parallel": false,
	    "task": {
		"reference": {
		    "description": "Test L1 - owping 1pps 600 packets",
		    "cli": "pscheduler task latency --dest __DEST__ --packet-count 600 --packet-interval 1"
		},
		"test": {
		    "spec": {
			"dest": "__DEST__",
			"packet-count": 600,
			"packet-interval": 1.0,
			"schema": 1
		    },
		    "type": "latency"
		}
	    },
	    "task-transform": {
		"script": [
		    "  if $global.source != null",
		    "  then .test.spec.source = $global.source",
		    "  else . end",
		    "| if $global.dest != null",
		    "  then .test.spec.dest = $global.dest",
		    "  else . end"
		]
	    }
	},

