		}
	    },
	    "task-transform": {
		"script": [
		    "  if $global.source != null",
		    "  then .test.spec.source = $global.source",
		    "  else . end",
		    "| if $global.dest != null",
		    "  then .test.spec.dest = $global.dest",
		    "  else . end",
		    "| .tools = [ $global.throughput.tool ]",
		    "| .test.spec.parallel = $global.throughput.cores"
		]
	    }
	},

